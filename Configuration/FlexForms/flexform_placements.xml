<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select function</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Position</numIndex>
										<numIndex index="1">Position->list;Position->show;Position->new;Position->create;Position->edit;Position->update;Position->delete</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">User</numIndex>
										<numIndex index="1">User->list;User->show</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Application</numIndex>
										<numIndex index="1">Application->list;Application->show</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<!-- Position Types -->
					<settings.positionTypes>
						<TCEforms>
							<label>Position Types</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_positiontype</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minItems>0</minItems>
								<maxItems>9999</maxItems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.positionTypes>

					<!-- Working Hours -->
					<settings.workingHours>
						<TCEforms>
							<label>Working Hours</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_workinghours</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minItems>0</minItems>
								<maxItems>9999</maxItems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.workingHours>
				
					<!-- Category -->
					<settings.categories>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xml:flexforms_general.categories</label>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<treeConfig>
									<parentField>parent</parentField>
									<appearance>
										<maxLevels>99</maxLevels>
										<expandAll>TRUE</expandAll>
										<showHeader>TRUE</showHeader>
									</appearance>
								</treeConfig>
								<foreign_table>sys_category</foreign_table>
								<foreign_table_where> AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0)</foreign_table_where>
								<size>10</size>
								<autoSizeMax>20</autoSizeMax>
								<minitems>0</minitems>
								<maxitems>99</maxitems>
							</config>
						</TCEforms>
					</settings.categories>
					<settings.limit>
						<TCEforms>
							<label>Limit</label>
							<config>
								<type>input</type>
								<size>8</size>
								<eval>int</eval>
								<range>
									<lower>0</lower>
									<upper>99999</upper>
								</range>
							</config>
						</TCEforms>
					</settings.limit>

				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
