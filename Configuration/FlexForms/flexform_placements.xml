<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select function</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Position</numIndex>
										<numIndex index="1">Position->list;Position->show;Position->new;Position->create;Position->edit;Position->update;Position->delete</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">User</numIndex>
										<numIndex index="1">User->list;User->show</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Application</numIndex>
										<numIndex index="1">Application->list;Application->show</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Quick Menu</numIndex>
										<numIndex index="1">Position->quickMenu</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<!-- order by -->
					<settings.orderBy>
						<TCEforms>
							<label>order By</label>
							<displayCond>FIELD:switchableControllerActions:!=:Position->quickMenu</displayCond>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Title</numIndex>
										<numIndex index="1">title</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Identifier</numIndex>
										<numIndex index="1">identifier</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Type</numIndex>
										<numIndex index="1">type</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">Entry Date</numIndex>
										<numIndex index="1">entryDate</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.orderBy>

					<!-- order direction -->
					<settings.orderDirection>
						<TCEforms>
							<label>Order Direction</label>
							<displayCond>FIELD:switchableControllerActions:!=:Position->quickMenu</displayCond>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">ascending</numIndex>
										<numIndex index="1">asc</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">descending</numIndex>
										<numIndex index="1">desc</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.orderDirection>

					<!-- Position Types -->
					<settings.positionTypes>
						<TCEforms>
							<label>Position Types</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_positiontype</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.positionTypes>

					<!-- Working Hours -->
					<settings.workingHours>
						<TCEforms>
							<label>Working Hours</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_workinghours</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.workingHours>
				
					<!-- Sectors -->
					<settings.sectors>
						<TCEforms>
							<label>Sectors</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_sector</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.sectors>
				
					<!-- Category -->
					<settings.categories>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_db.xlf:flexforms_general.categories</label>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<treeConfig>
									<parentField>parent</parentField>
									<appearance>
										<maxLevels>99</maxLevels>
										<expandAll>TRUE</expandAll>
										<showHeader>TRUE</showHeader>
									</appearance>
								</treeConfig>
								<foreign_table>sys_category</foreign_table>
								<foreign_table_where> AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0) ORDER BY sys_category.title ASC</foreign_table_where>
								<size>10</size>
								<autoSizeMax>20</autoSizeMax>
								<minitems>0</minitems>
								<maxitems>99</maxitems>
							</config>
						</TCEforms>
					</settings.categories>
					<settings.categoryConjunction>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_db.xlf:flexforms_general.categoryConjunction</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_db.xlf:flexforms_general.categoryConjunction.empty</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_db.xlf:flexforms_general.categoryConjunction.and</numIndex>
										<numIndex index="1">and</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_db.xlf:flexforms_general.categoryConjunction.or</numIndex>
										<numIndex index="1">or</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_db.xlf:flexforms_general.categoryConjunction.notor</numIndex>
										<numIndex index="1">notor</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_db.xlf:flexforms_general.categoryConjunction.notand</numIndex>
										<numIndex index="1">notand</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.categoryConjunction>
					<settings.limit>
						<TCEforms>
							<label>Limit</label>
							<displayCond>FIELD:switchableControllerActions:!=:Position->quickMenu</displayCond>
							<config>
								<type>input</type>
								<size>8</size>
								<eval>int</eval>
								<range>
									<lower>0</lower>
									<upper>99999</upper>
								</range>
							</config>
						</TCEforms>
					</settings.limit>

				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
