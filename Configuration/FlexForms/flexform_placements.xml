<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.select_function</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<itemsProcFunc>Webfox\Placements\Hooks\ItemsProcFunc->user_switchableControllerActions</itemsProcFunc>
								<items>
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.positions</numIndex>
										<numIndex index="1">Position->list;Position->show;Position->new;Position->create;Position->edit;Position->update;Position->delete</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.users</numIndex>
										<numIndex index="1">User->list;User->show</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.applications</numIndex>
										<numIndex index="1">Application->list;Application->show</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.optionGroupSearch</numIndex>
										<numIndex index="1">--div--</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.searchForm.simple</numIndex>
										<numIndex index="1">Position->searchForm</numIndex>
									</numIndex>
									<numIndex index="5">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.searchForm.extended</numIndex>
										<numIndex index="1">Position->extendedSearchForm</numIndex>
									</numIndex>
									<numIndex index="6">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.searchResult</numIndex>
										<numIndex index="1">Position->searchResult</numIndex>
									</numIndex>
									<numIndex index="7">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.optionGroupOthers</numIndex>
										<numIndex index="1">--div--</numIndex>
									</numIndex>
									<numIndex index="8">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.quickMenu</numIndex>
										<numIndex index="1">Position->quickMenu</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					
					<!-- order by -->
					<settings.orderBy>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy</label>
							<displayCond>FIELD:switchableControllerActions:!=:Position->quickMenu</displayCond>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.title</numIndex>
										<numIndex index="1">title</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.identifier</numIndex>
										<numIndex index="1">identifier</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.type</numIndex>
										<numIndex index="1">type</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.entryDate</numIndex>
										<numIndex index="1">entryDate</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.orderBy>

					<!-- order direction -->
					<settings.orderDirection>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection</label>
							<displayCond>FIELD:switchableControllerActions:!=:Position->quickMenu</displayCond>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.ascending</numIndex>
										<numIndex index="1">asc</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.descending</numIndex>
										<numIndex index="1">desc</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.orderDirection>


				</el>
			</ROOT>
		</sDEF>
		
		<!-- SHEET CONSTRAINTS -->
		<constraints>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.constraints</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- Position Types -->
					<settings.showPositionTypes>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.showPositionTypes</label>
							<onChange>reload</onChange>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.showPositionTypes>
					<settings.positionTypes>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.positionTypes</label>
							<displayCond>FIELD:settings.showPositionTypes:=:1</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_positiontype</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.positionTypes>

					<!-- Working Hours -->
					<settings.showWorkingHours>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.showWorkingHours</label>
							<onChange>reload</onChange>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.showWorkingHours>
					<settings.workingHours>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.workingHours</label>
							<displayCond>FIELD:settings.showWorkingHours:=:1</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_workinghours</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.workingHours>
				
					<!-- Sectors -->
					<settings.showSectors>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.showSectors</label>
							<onChange>reload</onChange>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.showSectors>
					<settings.sectors>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.sectors</label>
							<displayCond>FIELD:settings.showSectors:=:1</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_placements_domain_model_sector</allowed>
								<size>3</size>
								<autoMaxSize>20</autoMaxSize>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<showThumbs>1</showThumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.sectors>

					<!-- Conjunction of Selection -->
					<settings.constraintsConjunction>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.constraintsConjunction</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.constraintsConjunction.and</numIndex>
										<numIndex index="1">and</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.constraintsConjunction.or</numIndex>
										<numIndex index="1">or</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.constraintsConjunction>
				
					<settings.showConjunctionSelector>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.showConjunctionSelector</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.showConjunctionSelector>

					<!-- Category -->
					<settings.categories>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.categories</label>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<treeConfig>
									<parentField>parent</parentField>
									<appearance>
										<maxLevels>99</maxLevels>
										<expandAll>TRUE</expandAll>
										<showHeader>TRUE</showHeader>
									</appearance>
								</treeConfig>
								<foreign_table>sys_category</foreign_table>
								<foreign_table_where> AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0) ORDER BY sys_category.title ASC</foreign_table_where>
								<size>10</size>
								<autoSizeMax>20</autoSizeMax>
								<minitems>0</minitems>
								<maxitems>99</maxitems>
							</config>
						</TCEforms>
					</settings.categories>
					<settings.categoryConjunction>
						<TCEforms>
							<label>LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.empty</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.and</numIndex>
										<numIndex index="1">and</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.or</numIndex>
										<numIndex index="1">or</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.notor</numIndex>
										<numIndex index="1">notor</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">LLL:EXT:placements/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.notand</numIndex>
										<numIndex index="1">notand</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.categoryConjunction>
					<settings.limit>
						<TCEforms>
							<label>Limit</label>
							<displayCond>FIELD:switchableControllerActions:!=:Position->quickMenu</displayCond>
							<config>
								<type>input</type>
								<size>8</size>
								<eval>int</eval>
								<range>
									<lower>0</lower>
									<upper>99999</upper>
								</range>
							</config>
						</TCEforms>
					</settings.limit>

				</el>
			</ROOT>
		</constraints>
	</sheets>
</T3DataStructure>
